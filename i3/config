# bindsym $mod+shift+s --release exec --no-startup-id "scrot -s \\"~/.screenshots/%Y-%m=%d=%T-scrshot.png\\""
bindsym --release $mod+Shift+s exec --no-startup-id import ~/.screenshots/newest.png && cp ~/.screenshots/newest.png ~/.screenshots/$(date +date%Y_%m%d_time%H_%M_%S).png && xclip -sel clipboard -target image/png -i ~/.screenshots/newest.png

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl -- set-sink-volume 0 +5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl -- set-sink-volume 0 -5% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound

# Sreen brightness controls
set $refresh_i3status killall -SIGUSR1 i3status
set $increase_brightnes exec xbacklight -inc 5 && echo xbachlight > /home/bachld/.config/i3status/brightness && $refresh_i3status

bindsym XF86MonBrightnessUp $increase_brightnes  # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 5 # decrease screen brightness


set $mode_control [S]hutdown [R]estart [L]og out
bindsym $mod+Shift+0 mode "$mode_control"
bindsym $mod+0 mode "$mode_control"

mode "$mode_control" {

    bindsym s exec shutdown now
    bindsym shift+s exec shutdown now
    bindsym r exec shutdown now
    bindsym shift+r exec shutdown -r now
    bindsym l exec i3-msg exit
    bindsym shift+l exec i3-msg exit

    bindsym Escape mode "default"
    bindsym Return mode "default"
}


set $mode_monitor [N]ext, [P]revious, [1] Both, [2] Laptop only, [3] Monitor only
bindsym $mod+Shift+9 mode "$mode_monitor"
bindsym $mod+9 mode "$mode_monitor"

mode "$mode_monitor" {

    bindsym n exec --no-startup-id ~/.config/i3/monitor/monitor_switch.sh -inc
    bindsym shift+n exec --no-startup-id ~/.config/i3/monitor/monitor_switch.sh -inc

    bindsym p exec --no-startup-id ~/.config/i3/monitor/monitor_switch.sh -dec
    bindsym shift+p exec --no-startup-id ~/.config/i3/monitor/monitor_switch.sh -dec

    bindsym 1 exec --no-startup-id ~/.config/i3/monitor/monitor_switch.sh -set 0
    bindsym shift+1 exec --no-startup-id ~/.config/i3/monitor/monitor_switch.sh -set 0

    bindsym 2 exec --no-startup-id ~/.config/i3/monitor/monitor_switch.sh -set 1
    bindsym shift+2 exec --no-startup-id ~/.config/i3/monitor/monitor_switch.sh -set 1

    bindsym 3 exec --no-startup-id ~/.config/i3/monitor/monitor_switch.sh -set 2
    bindsym shift+3 exec --no-startup-id ~/.config/i3/monitor/monitor_switch.sh -set 2

    bindsym Escape mode "default"
    bindsym Return mode "default"
}
